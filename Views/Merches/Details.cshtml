@model MyMerchTracker3.Models.Merch

@{
    ViewData["Title"] = "Details";
}

<h2>Merch Details</h2>

<div>
    <hr />
    <dl class="dl-horizontal">

        <dt>
          Merch Type
        </dt>
        <dd>
            @Html.DisplayFor(model => model.MerchType.Title)
        </dd>
        <dt>
            Description
        </dt>
        <dd>
            @Html.DisplayFor(model => model.MerchDescription)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.MerchPrice)
        </dt>
        <dd>
            $@Html.DisplayFor(model => model.MerchPrice)
        </dd>
     
        <dt>

            @if (Model.MerchType.Title == "Shirt")

            {

            <dt>
                @Html.DisplayNameFor(model => model.Small)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Small)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Medium)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Medium)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Large)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Large)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Xlarge)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Xlarge)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Xxlarge)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Xxlarge)
            </dd>
            }
            else
            {
            <dt>
                @Html.DisplayNameFor(model => model.AllSize)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.AllSize)
            </dd>
            }
        </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Delete" asp-route-id="@Model.Id">Delete</a> |
    <a asp-action="Index">Back to List</a>
</div>
